{
  "version": 1,
  "id": "xdb.example.post",
  "defs": {
    "main": {
      "type": "record",
      "description": "A post",
      "record": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "created_at": {
            "type": "time"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "rating": {
            "type": "float"
          },
          "published": {
            "type": "boolean"
          },
          "author": {
            "type": "ref",
            "ref": "#authorDef"
          },
          "comments": {
            "type": "ref",
            "ref": "#commentsDef"
          }
        }
      },
      "authorDef": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "commentsDef": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer"
          },
          "last_comment_at": {
            "type": "time"
          }
        }
      }
    }
  }
}
